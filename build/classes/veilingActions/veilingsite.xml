<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="visitor" namespace="/visitor" extends="struts-default">
		
		<!-- Action mapping visitors -->
		
		<action name="ProductList" class="veilingActions.visitor.ProductList">
			<result name="success">/jsp/visitor/ProductList.jsp</result>
		</action>
		
		<action name="ProductInfoForm" class="veilingActions.visitor.ProductInfoForm">
			<result name="success">/jsp/visitor/ProductInfoForm.jsp</result>
		</action>
		
		<action name="ProductSpecs" class="veilingActions.visitor.ProductSpecs">
			<result name="success">/jsp/visitor/ProductSpecs.jsp</result>
			<result name="input">/jsp/visitor/ProductInfoForm.jsp</result>
		</action>
		
		<action name="CreateAccountForm" >
			<result name="success">/jsp/visitor/CreateAccountForm.jsp</result>
		</action>
		
		<action name="CreateAccount" class="veilingActions.visitor.CreateAccount">
			<result name="success">/jsp/visitor/AccountCreated.jsp</result>
			<result name="input">/jsp/visitor/CreateAccountForm.jsp</result>
		</action>
		
		<action name="LoginForm" >
			<result name="success">/jsp/visitor/LoginForm.jsp</result>
		</action>
		
		<action name="Login" class="veilingActions.visitor.Login">
			<result name="success">/jsp/menu/MemberMenu.jsp</result>
			<result name="managermenu">/jsp/menu/MemberMenu.jsp</result>
			<result name="coworkermenu">/jsp/menu/MemberMenu.jsp</result>
			<result name="input">/jsp/visitor/LoginForm.jsp</result>
		</action>
	</package>
	
	<!-- Action mapping members +  Interceptors -->
	
	<package name="member" namespace="/member" extends="struts-default">
		<interceptors>
			<interceptor name="authenticationInterceptor"
				class="veilingInterceptors.AuthenticationInterceptor" />

			<interceptor-stack name="MemberStack">
				<interceptor-ref name="authenticationInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>
	
		<default-interceptor-ref name="MemberStack" />	
		
		<global-results>
			<result name="login" type="redirect">
				/visitor/LoginForm.action
			</result>
		</global-results>
		
		<action name="MemberMenu" class="veilingActions.member.MemberMenu">
			<result>/jsp/menu/MemberMenu.jsp</result>
		</action>
		
		<action name="ProductList" class="veilingActions.visitor.ProductList">
			<result name="success">/jsp/member/ProductList.jsp</result>
		</action>
		
		<action name="ProductInfoForm" class="veilingActions.visitor.ProductInfoForm">
			<result name="success">/jsp/member/ProductInfoForm.jsp</result>
		</action>
		
		<action name="ProductReservationForm">
			<result name="success">/html/member_not_yet_implemented.html</result>
		</action>
		
		<action name="CancelReservationForm">
			<result name="success">/html/member_not_yet_implemented.html</result>
		</action>
		
		<action name="MyProductList">
			<result name="success">/html/member_not_yet_implemented.html</result>
		</action>
		
		<action name="ChangePasswordForm">
			<result name="success">/html/member_not_yet_implemented.html</result>
		</action>
		
		<action name="Logout" class="veilingActions.member.Logout">
			<result name="success">/jsp/member/LoggedOut.jsp</result>
		</action>	
	</package>
</struts>
